/* components/verifyInput/verifyInput.wxss */
.section{
  display: flex;
  position: relative;
  width: 550rpx;
  background-color: #fff;
  padding: 16px 10px;
  font-size: 30rpx;
}
.section::after{
  content: "";
  position: absolute;
  bottom: 0;
  left: 16rpx;
  right: 16rpx;
  border-bottom: 1rpx solid #ebedf0;
  transform: scaleY(.5);
  transform-origin: center;
}
.section .label::before{
  content: "*";
  color: red;
  font-size: 24rpx;
}
.section .label{
  flex: 1;
  min-width: 160rpx;
}
.section .ipt{
  flex: 2;
}
.section .info .error{
  color: red;
  font-size: 25rpx;
}