<view class="profile">
  <!-- 登录 -->
  <view class="login">
    <image class="avatar" bindtap="onLogin" src="{{user.userInfo.avatarUrl || ' ../../assets/images/default-avatar.jpg'}}"  mode="scaleToFill"/>
    <text class="des">hi，{{user.username ? user.username + '同学' : '一秒登录体验所有功能'}}</text>
  </view>

  <van-toast id="van-toast" />
  <!-- 相关信息 -->
  <view class="other-info">
    <view class="top">
      <view class="wallet item">
        <image class="icon" src="../../assets/images/wallet.png" mode="" />
        <text>我的钱包</text>
      </view>
      <view class="order item">
        <image class="icon" src="../../assets/images/order.png" mode="" />
        <text>我的发布</text>
      </view>
      <view class="history item">
        <image class="icon" src="../../assets/images/history.png" mode="" />
        <text>历史游览</text>
      </view>
      <view class="set item">
        <image class="icon" src="../../assets/images/set.png" mode="" />
        <text>设置</text>
      </view>
    </view>
    <view class="bottom">
      <view class="item ">
        <van-icon class="icon" name="balance-o" size="50rpx" />
        <text>我的购买</text>
      </view>
      <view class="item ">
        <van-icon class="icon" name="service-o" size="50rpx" />
        <text>联系客服</text>
      </view>
      <view class="item ">
        <van-icon class="icon" name="question-o" size="50rpx" />
        <text>问题反馈</text>
      </view>
      <view class="item ">
        <van-icon class="icon" name="share-o" size="50rpx" />
        <text>好物分享</text>
      </view>
    </view>
  </view>
</view>