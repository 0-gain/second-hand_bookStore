.profile{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  color: #515151;
  height: 100vh;
}
.profile .login{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.profile .login .avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #9E9E9E;
}
.profile .login .des{
  margin-top:20px;
}
.profile .other-info{
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  flex: 1;
}
.profile .other-info .top{
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.profile .other-info .top .icon{
  width: 60rpx;
  height: 60rpx;
}
.profile .other-info .top .item{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}
.profile .other-info .bottom{
  margin-top: 20rpx;
  padding:0 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
  flex: 1;
}
.profile .other-info .bottom .item{
  display: flex;
  line-height: 100rpx;
  border-bottom: 1rpx solid #9E9E9E;
}
.profile .other-info .bottom .item:last-child{
  border-bottom: none;
}
.profile .other-info .bottom .item .icon{
  margin-right: 20rpx;
}